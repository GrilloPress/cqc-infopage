<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag "main" %>
  </head>
  
  <body class="container-fluid">
    
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <header id="cqc">
          <%= image_tag "banner.png", class: "img-responsive", width: "100%" %>
          <nav>
            <ul class="nav nav-pills">
              <li role="presentation" class="<%= is_page_selected("/") %>"><%= link_to("Home", "/index.html") %></li>
              <li role="presentation" class="<%= is_page_selected("/checklists.html") %>"><%= link_to("Checklists", "/checklists.html") %></li>
              <li role="presentation" class="<%= is_page_selected("/infosheets.html") %>"><%= link_to("Information Sheets", "/infosheets.html") %></li>
              <li role="presentation" class="<%= is_page_selected("/faqs.html") %>"><%= link_to("Frequently Asked Questions", "/faqs.html") %></li>
              <li role="presentation" class="<%= is_page_selected("/news.html") %>"><%= link_to("Newsletters", "/news.html") %></li>
            </ul>
          </nav>
        </header>
      </div>
    </div>
      
    
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        
        <div class="row">
          
          <div class="col-md-3 col-sm-3">
            <aside id="sidebar">
              <%= partial "partials/sidebar" %>
            </aside>
          </div>
          
          <div class="col-md-8 col-sm-8">
            <main id="<%= page_classes %>">
              <%= yield %>
            </main>
          </div>
          
        </div>
      </div>
    </div>
    
    <div class="col-md-10 col-md-offset-1">
      <footer id="cqc">
        <%= partial "partials/footer" %>
      </footer>
    </div>
    <%= javascript_include_tag  "main" %>
  </body>
</html>