<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag "main" %>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
     <%= javascript_include_tag  "html5shiv.min" %>
     <%= javascript_include_tag  "respond.min" %>
    <![endif]-->
  </head>
  
  <body class="container-fluid" id="top">
    
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        
        <div class="row">
          <div class="col-md-11 col-sm-11">
            <%= image_tag "banner.png", class: "img-responsive hidden-xs", width: "100%" %>
            <%= image_tag "slogan.png", class: "img-responsive visible-xs", width: "100%" %>
          </div>
          
          <div class="col-md-11 col-sm-11">
            <header id="cqc">
          <nav>
            <ul class="nav nav-pills">
              <li role="presentation" class="<%= is_page_selected("/") %>"><%= link_to("Home", "/index.html") %></li>
              <li role="presentation" class="<%= is_page_selected("/checklists.html") %>"><%= link_to("Checklists", "/checklists.html") %></li>
              <li role="presentation" class="<%= is_page_selected("/infosheets.html") %>"><%= link_to("Information Sheets", "/infosheets.html") %></li>
              <li role="presentation" class="<%= is_page_selected("/faq.html") %>"><%= link_to("Frequently Asked Questions", "/faq.html") %></li>
              <li role="presentation" class="<%= is_page_selected("/documents.html") %>"><%= link_to("Key Documents", "/documents.html") %></li>
              <li role="presentation" class="<%= is_page_selected("/news.html") %>"><%= link_to("Newsletters", "/news.html") %></li>
            </ul>
          </nav>
        </header>
          </div>
        </div>
        
        
        
      </div>
    </div>
      
    
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        
        <div class="row">
          
          <div class="col-md-3 col-sm-3">
            <aside id="sidebar">
              <%= partial "partials/sidebar" %>
            </aside>
          </div>
          
          <div class="col-md-8 col-sm-8">
            <main id="<%= page_classes %>">
              <%= yield %>
            </main>
          </div>
          
        </div>
      </div>
    </div>
    
    <div class="col-md-10 col-md-offset-1">
      <footer id="cqc">
        <%= partial "partials/footer" %>
      </footer>
    </div>
    <%= javascript_include_tag  "main" %>
  </body>
</html>